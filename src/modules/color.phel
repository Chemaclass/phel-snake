(ns phel-snake\modules\color
  (:use Phel\Run\Domain\Repl\ColorStyle))

(defn color-green
  "A wrapper for the Repl ColorStyle with green"
  [str]
  (let [style (php/:: ColorStyle (withStyles))]
    (php/-> style (green str))))

(defn color-red
  "A wrapper for the Repl ColorStyle with red"
  [str]
  (let [style (php/:: ColorStyle (withStyles))]
    (php/-> style (red str))))
